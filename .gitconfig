[user]
	email = pbartine@salesforce.com
	name = Pierce Bartine
	signingkey = 7ED4581988C8D761
[push]
	default = simple
	followTags = true
[alias]
	root = rev-parse --show-toplevel
	co = checkout
	s = status
	unstage = reset HEAD --
	br = branch
	cm = commit
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	zap = remote prune origin
[commit]
	gpgSign = true
[core]
	pager = delta
[gpg]
	program = gpg
[pull]
	rebase = false
[delta]
	syntax-theme = Solarized (light)
	side-by-side = true
[interactive]
	diffFilter = delta --color-only
[credential]
	helper = osxkeychain
